@{
}

@using InveonWeek2.Models.Entities

@model Book

<style>
    .active {
        font-weight: bold;
    }

    .book-cover-container {
        height: 400px;
        overflow: hidden;
    }

    .book-cover {
        width: 100%;
        height: 100%;
        object-fit: cover;
        object-position: center;
    }
</style>


<div class="container mt-4">
    <h1 class="mb-4">Kitap Detayları</h1>
    <div class="row">
        <div class="col-md-4 mb-4">
            <img src="/bookicon.png?height=400&width=300" alt="Kitap Kapağı" class="img-fluid book-cover rounded shadow">
        </div>
        <div class="col-md-8">
            <h2 id="bookTitle">@Model.Title</h2>
            <p><strong>Yazar:</strong> <span id="bookAuthor">@Model.Author</span></p>
            <p><strong>Yayın Yılı:</strong> <span id="bookPublicationYear">@Model.PublicationYear</span></p>
            <p><strong>ISBN:</strong> <span id="bookISBN">@Model.ISBN</span></p>
            <p><strong>Tür:</strong> <span id="bookGenre">@Model.Genre</span></p>
            <p><strong>Yayıncı:</strong> <span id="bookPublisher">@Model.Publisher</span></p>
            <p><strong>Sayfa Sayısı:</strong> <span id="bookPageCount">@Model.PageCount</span></p>
            <p><strong>Dil:</strong> <span id="bookLanguage">@Model.Language</span></p>
            <p><strong>Mevcut Kopya Sayısı:</strong> <span id="bookAvailableCopies">@Model.AvailableCopies</span></p>
            <h3 class="mt-4">Özet</h3>
            <p id="bookSummary">@Model.Summary</p>
        </div>
    </div>
    <div class="mt-4">
        <a href="/Book" class="btn btn-secondary">Geri Dön</a>
    </div>
</div>
