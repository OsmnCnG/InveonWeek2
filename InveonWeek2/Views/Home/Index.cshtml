@{
    ViewData["Title"] = "Home Page";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">


<div class="text-center">
    <h1 class="display-4">Welcome @User.Identity?.Name</h1>
</div>
<section class="search-section">
    <div class="container">
        <h1 class="text-center mb-4">Kitap Ara</h1>
        <div class="row justify-content-center">
            <div class="col-md-8">
                <form>
                    <div class="input-group mb-3">
                        <input type="text" class="form-control form-control-lg" placeholder="Kitap adı, yazar veya ISBN girin" aria-label="Kitap ara" aria-describedby="button-search">
                        <button class="btn btn-primary btn-lg" type="submit" id="button-search">Ara</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

