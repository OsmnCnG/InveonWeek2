@model InveonWeek2.Dto.UserDto

<style>
    body {
        background-color: #000;
        color: #fff;
        min-height: 100vh;
    }
    .back-button {
        position: fixed;
        top: 20px;
        left: 20px;
        color: #fff;
        text-decoration: none;
        display: flex;
        align-items: center;
        gap: 8px;
    }
    .back-button:hover {
        color: #ccc;
    }
    .login-container {
        max-width: 400px;
        margin: 0 auto;
        padding: 120px 20px 0;
    }
    .form-control {
        background-color: #111;
        border: 1px solid #333;
        color: #fff;
        padding: 12px 16px;
        margin-bottom: 16px;
    }
    .form-control:focus {
        background-color: #111;
        border-color: #666;
        color: #fff;
        box-shadow: none;
    }
    .form-control::placeholder {
        color: #666;
    }
    .btn-primary {
        background-color: #fff;
        border: none;
        color: #000;
        padding: 12px;
        width: 100%;
        margin-bottom: 16px;
        font-weight: 500;
    }
    .btn-primary:hover {
        background-color: #e6e6e6;
        color: #000;
    }
    .btn-github {
        background-color: #111;
        border: 1px solid #333;
        color: #fff;
        padding: 12px;
        width: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
    }
    .btn-github:hover {
        background-color: #222;
        color: #fff;
    }
    .divider {
        text-align: center;
        margin: 24px 0;
        color: #666;
        font-size: 14px;
    }
    .signup-link {
        text-align: center;
        margin-top: 24px;
    }
    .signup-link a {
        color: #fff;
        text-decoration: none;
    }
    .signup-link a:hover {
        text-decoration: underline;
    }
</style>


<div class="login-container">
    <h1 class="h3 mb-2">Inveon'a Hoşgeldiniz</h1>
    <p class="text-muted mb-4">Kaydolun</p>

    <form asp-controller="Register" asp-action="Register" method="POST" autocomplete="off">
        <label for="username" class="form-label">Kullanıcı adı</label>
        <input type="text" class="form-control" placeholder="username" asp-for="UserName" required autocomplete="off">
        <label for="email" class="form-label">E-posta Adresi</label>
        <input type="email" class="form-control" placeholder="name@example.com" asp-for="Email" required autocomplete="off">
        <label for="password" class="form-label">Şifre</label>
        <input type="password" class="form-control" placeholder="password" asp-for="Password" required autocomplete="off">
        <label for="phonenumber" class="form-label">Telefon Numarası</label>
        <input type="number" class="form-control" placeholder="+90 (5xx) xxx xx xx" asp-for="PhoneNumber" required autocomplete="off">
        <button type="submit" class="btn btn-primary">Kayıt ol</button>
    </form>
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }
    <div class="divider">OR CONTINUE WITH</div>


    <div class="signup-link">
        Hesabınız zaten var mı? <a href="/Login">Giriş yap</a>
    </div>
</div>
